    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificar PalÃ­ndromo"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/resultText"
